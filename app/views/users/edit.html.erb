<div class="col-md-offset-4 col-md-4 users-new-container users-profile">
  <h1 class="text-center text-white">アカウント編集</h1>
  <%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "text-white" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= f.label :email, class: "text-white" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "text-white" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "text-white" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <%= f.submit "更新する", class: "btn-block btn-white" %>
  <% end %>
</div>
